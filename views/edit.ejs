<% include partials/header %>
<div class="container">
    <div class="thumbnail" style='margin: 20px auto; width: 75%'>
        <h1 style="text-align: center;margin-bottom: 30px;">Edit <%= campground.name %></h1>
        <div style='margin: 0 auto;width: 75%'>
                <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name='camp[name]' value="<%= campground.name %>">
                    </div> 
                    <div class="form-group">
                        <input class="form-control" type="text" name='camp[image]' value="<%= campground.image %>">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name='camp[disc]' value="<%= campground.description %>">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block">Submit</button>
                    </div>
                </form>
        </div>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
<% include partials/footer %>

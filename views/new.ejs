<% include partials/header %>
<div class="container">
    <div class="thumbnail" style='margin: 20px auto; width: 75%'>
        <h1 style="text-align: center;margin-bottom: 30px;">Creat a New Campground</h1>
        <div style='margin: 0 auto;width: 75%'>
                <form action="/campgrounds" method="POST">
                    <div class="form-group">
                        <input class="form-control" type="text" name='name' placeholder="Name">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name='image' placeholder="Image url">
                    </div>
                    <div class="form-group">
                        <input class="form-control" type="text" name='disc' placeholder="Description">
                    </div>
                    <div class="form-group">
                        <button class="btn btn-success btn-lg btn-block">Submit</button>
                    </div>
                </form>
        </div>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>
